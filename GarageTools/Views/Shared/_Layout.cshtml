<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - GarageTools</title>
    <link rel="stylesheet" href="~/css/app.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/splidejs/splide.min.css" /> 
    <script src="https://kit.fontawesome.com/8cf5acb099.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
</head>
<body class="">
    <header class="relative bg-site-gray ">
        <nav class="">
            <!-- Mobile side nav components -->
            <div id="sideBar"
                 class="transition ease-in-out duration-500 transform -translate-x-full fixed inset-0 flex z-40 lg:hidden">
                <!-- Side menu close button -->
                <div class="relative max-w-xs w-full bg-white shadow-xl pb-12 flex flex-col overflow-y-auto">
                    <div class="px-4 pt-5 pb-2 flex">
                        <button id="sideBarClose" type="button"
                                class="-m-2 p-2 rounded-md inline-flex items-center justify-center text-gray-400">
                            <!-- Heroicon name: outline/x -->
                            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                    <!-- Mobile nav components -->
                    <div class="border-t border-gray-200 py-6 px-4 space-y-6">
                        <div class="flow-root">
                            <a href="#" class="-m-2 p-2 block font-medium text-gray-900">Sign in</a>
                        </div>
                        <div class="flow-root">
                            <a href="#" class="-m-2 p-2 block font-medium text-gray-900">Create account</a>
                        </div>
                    </div>
                    <!-- Side nav links -->
                    <div class="mt-2">
                        <!-- Popular items display -->
                        <div id="tabs-1-panel-1" class="pt-10 pb-8 px-4 space-y-10">
                            <div class="grid grid-cols-2 gap-x-4">
                                <div class="group relative text-sm">
                                    <div class="aspect-w-1 aspect-h-1 rounded-lg bg-gray-100 overflow-hidden group-hover:opacity-75">
                                        <img src="https://via.placeholder.com/120" alt="" class="object-center object-cover">
                                    </div>
                                </div>
                                <div class="group relative text-sm">
                                    <div class="aspect-w-1 aspect-h-1 rounded-lg bg-gray-100 overflow-hidden group-hover:opacity-75">
                                        <img src="https://via.placeholder.com/120" alt="" class="object-center object-cover">
                                    </div>
                                </div>
                            </div>

                            <!-- Categories side menu nav list-->
                            <div>
                                <p class="font-medium text-gray-900">Categories</p>
                                <ul class="mt-6 flex flex-col space-y-6">
                                    <li class="flow-root">
                                        <a href="#" class="-m-2 p-2 block text-gray-500">Power Tools</a>
                                    </li>
                                    <li class="flow-root">
                                        <a href="#" class="-m-2 p-2 block text-gray-500">Batteries</a>
                                    </li>
                                    <li class="flow-root">
                                        <a href="#" class="-m-2 p-2 block text-gray-500">Brands</a>
                                    </li>
                                    <li class="flow-root">
                                        <a href="#" class="-m-2 p-2 block text-gray-500">About Us</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Currency/Country Change -->
                    <div class="border-t border-gray-200 py-6 px-4">
                        <a href="#" class="-m-2 p-2 flex items-center">
                            <img src="https://tailwindui.com/img/flags/flag-canada.svg" alt="" class="w-5 h-auto block flex-shrink-0">
                            <span class="ml-3 block text-base font-medium text-gray-900"> CAD </span>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Logo -->
            <div class="bg-site-primary h-12 flex items-center justify-center text-sm font-medium px-4 sm:px-6 lg:px-8">
                <a href="#" class="flex items-center justify-center w-full text-white">
                    <i class="fa-solid fa-warehouse fa-2xl mr-3"></i>
                    <div class="font-bold text-2xl">Garage Tools</div>
                </a>
            </div>
            <div aria-label="Top" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="">
                    <div class="h-16 flex items-center">
                        <!-- Mobile menu toggle, controls the 'mobileMenuOpen' state. -->
                        <button id="sideBarOpen" type="button" class="bg-site-gray text-white p-2 rounded-md lg:hidden">
                            <span class="sr-only">Open menu</span>
                            <!-- Heroicon name: outline/menu -->
                            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>

                        <!-- Desktop nav links -->
                        <div class="hidden lg:ml-8 lg:block lg:self-stretch">
                            <ul class="h-full flex space-x-8">
                                <li class="relative flex">
                                    <a href="#"
                                       class="border-transparent text-gray-700 hover:text-gray-800 relative z-10 flex items-center transition-colors ease-out duration-200 text-sm font-medium border-b-2 -mb-px pt-px"
                                       aria-expanded="false">Power Tools</a>
                                </li>
                                <li class="relative flex">
                                    <a href="#"
                                       class="border-transparent text-gray-700 hover:text-gray-800 relative z-10 flex items-center transition-colors ease-out duration-200 text-sm font-medium border-b-2 -mb-px pt-px"
                                       aria-expanded="false">Batteries</a>
                                </li>
                                <li class="relative flex">
                                    <a href="#"
                                       class="border-transparent text-gray-700 hover:text-gray-800 relative z-10 flex items-center transition-colors ease-out duration-200 text-sm font-medium border-b-2 -mb-px pt-px"
                                       aria-expanded="false">Brands</a>
                                </li>
                                <li class="relative flex">
                                    <a href="#"
                                       class="border-transparent text-gray-700 hover:text-gray-800 relative z-10 flex items-center transition-colors ease-out duration-200 text-sm font-medium border-b-2 -mb-px pt-px"
                                       aria-expanded="false">About Us</a>
                                </li>
                            </ul>
                        </div>

                        <!-- Search -->
                        <div class="flex-1 w-full mx-auto max-w-sm content-center py-4 lg:py-0">
                            <div class="relative pull-right pl-4 pr-4 md:pr-0">
                                <input type="search" placeholder="Search"
                                       class="h-10 w-full bg-gray-100 text-sm text-gray-800 transition border focus:outline-none focus:border-purple-500 rounded py-1 px-2 pl-10 appearance-none leading-normal">
                                <div class="absolute search-icon" style="top: 0.8rem;left: 1.75rem;">
                                    <svg class="fill-current pointer-events-none text-gray-800 w-4 h-4" xmlns="http://www.w3.org/2000/svg"
                                         viewBox="0 0 20 20">
                                        <path d="M12.9 14.32a8 8 0 1 1 1.41-1.41l5.35 5.33-1.42 1.42-5.33-5.34zM8 14A6 6 0 1 0 8 2a6 6 0 0 0 0 12z">
                                        </path>
                                    </svg>
                                </div>
                            </div>
                        </div>


                        <!-- Sign in -->
                        <div class="ml-4 flow-root lg:ml-6">
                            <a href="#" class="group -m-2 p-2 flex items-center">
                                <svg class="flex-shrink-0 h-6 w-6 text-gray-400 group-hover:text-gray-500"
                                     xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd"
                                          d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z"
                                          clip-rule="evenodd" />
                                </svg>
                            </a>
                        </div>

                        <!-- Cart -->
                        <div class="ml-4 flow-root lg:ml-6">
                            <a href="#" class="group -m-2 p-2 flex items-center">
                                <!-- Heroicon name: outline/shopping-bag -->
                                <svg class="flex-shrink-0 h-6 w-6 text-gray-400 group-hover:text-gray-500"
                                     xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                                     aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                                </svg>
                                <span class="ml-2 text-sm font-medium text-gray-700 group-hover:text-gray-800">0</span>
                                <span class="sr-only">items in cart, view bag</span>
                            </a>
                        </div>

                        <!-- Change country/currency -->
                        <div class="hidden lg:ml-8 lg:flex">
                            <a href="#" class="text-gray-700 hover:text-gray-800 flex items-center">
                                <img src="https://tailwindui.com/img/flags/flag-canada.svg" alt=""
                                     class="w-5 h-auto block flex-shrink-0">
                                <span class="ml-3 block text-sm font-medium"> CAD </span>
                                <span class="sr-only">, change currency</span>
                            </a>
                        </div>
                    </div>
                </div> 
            </div>
        </nav>
    </header>
    <div style="background-color: rgb(132 204 22);" class="bg-lime-500 h-10 flex items-center justify-center text-sm font-medium text-white px-4 sm:px-6 lg:px-8">
        Get free delivery on orders over $50
    </div>

    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/splidejs/splide.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
