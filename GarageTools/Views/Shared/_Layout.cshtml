                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>

                        <!-- Desktop nav links -->
                        <div class="hidden lg:block lg:self-stretch">
                            <ul class="h-full flex space-x-8">
                                <li class="relative flex">
                                    <a asp-area="" asp-controller="Products" asp-action="PowerTools"
                                       class="border-transparent text-site-primary hover:text-gray-500 relative z-10 flex items-center transition-colors ease-out duration-200 text-sm font-medium border-b-2 -mb-px pt-px"
                                       aria-expanded="false">Power Tools</a>
                                </li>
                                <li class="relative flex">
                                    <a asp-area="" asp-controller="" asp-action=""
                                       class="border-transparent text-site-primary hover:text-gray-500 relative z-10 flex items-center transition-colors ease-out duration-200 text-sm font-medium border-b-2 -mb-px pt-px"
                                       aria-expanded="false">Batteries</a>
                                </li>
                                <li class="relative flex">
                                    <a asp-area="" asp-controller="" asp-action=""
                                       class="border-transparent text-site-primary hover:text-gray-500 relative z-10 flex items-center transition-colors ease-out duration-200 text-sm font-medium border-b-2 -mb-px pt-px"
                                       aria-expanded="false">Brands</a>
                                </li>
                                <li class="relative flex">
                                    <a asp-area="" asp-controller="" asp-action=""
                                       class="border-transparent text-site-primary hover:text-gray-500 relative z-10 flex items-center transition-colors ease-out duration-200 text-sm font-medium border-b-2 -mb-px pt-px"
                                       aria-expanded="false">About Us</a>
                                </li>
                            </ul>
                        </div>

                        <!-- Search -->
                        <div class="flex-1 w-full mx-auto search-bar-width content-center py-4 lg:py-0">
                            <div class="relative pull-right pl-4 pr-4 md:pr-0">
                                <input type="search" placeholder="Search"
                                       class="h-10 w-full bg-gray-100 text-sm text-gray-800 transition border focus:outline-none focus:border-purple-500 rounded py-1 px-2 pl-10 appearance-none leading-normal">
                                <div class="absolute search-icon" style="top: 0.8rem;left: 1.75rem;">
                                    <svg class="fill-current pointer-events-none text-gray-800 w-4 h-4" xmlns="http://www.w3.org/2000/svg"
                                         viewBox="0 0 20 20">
                                        <path d="M12.9 14.32a8 8 0 1 1 1.41-1.41l5.35 5.33-1.42 1.42-5.33-5.34zM8 14A6 6 0 1 0 8 2a6 6 0 0 0 0 12z">
                                        </path>
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <!-- Sign in -->
                        <div class="ml-4 flow-root lg:ml-6">
                            <a asp-area="" asp-controller="" asp-action="" class="group -m-2 p-2 flex items-center">
                                <svg class="flex-shrink-0 h-6 w-6 text-site-primary group-hover:text-gray-500"
                                     xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd"
                                          d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z"
                                          clip-rule="evenodd" />
                                </svg>
                            </a>
                        </div>

                        <!-- Cart -->
                        <div class="ml-4 flow-root lg:ml-6">
                            <a asp-area="" asp-controller="" asp-action="" class="group -m-2 p-2 flex items-center">
                                <!-- Heroicon name: outline/shopping-bag -->
                                <svg class="flex-shrink-0 h-6 w-6 text-site-primary group-hover:text-gray-500"
                                     xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                                     aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                                </svg>
                                <span class="ml-2 text-sm font-medium text-gray-700 group-hover:text-gray-800">0</span>
                                <span class="sr-only">items in cart, view bag</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="bg-site-primary h-10 flex items-center justify-center text-sm font-medium text-white px-4 sm:px-6 lg:px-8">
        Get free delivery on orders over $50
    </div>

    <main role="main">
        @RenderBody()
    </main>

