<section id="image-carousel" class="splide" aria-label="Slide Container">
    <div class="splide__track">
        <ul class="splide__list ">
            <li class="splide__slide">
                <img class="splide__hero" src="~/Images/Heroes/M18-carousel.webp" alt="Person cutting pipe with milwaukee tool">
            </li>
            <li class="splide__slide">
                <img class="splide__hero" src="~/Images/Heroes/D-carousel.webp" alt="Person cutting a deck with dewalt circular saw">
            </li>
            <li class="splide__slide">
                <img class="splide__hero" src="~/Images/Heroes/M-carousel.jpg" alt="Person mowing lawn with makita lawn mower">
            </li>
            <li class="splide__slide">
                <img class="splide__hero" src="~/Images/Heroes/R-carousel.jpg" alt="person grinding metal with a ryobi die angle grinder">
            </li>
        </ul>
    </div>

    <div class="flex h-10 justify-center items-center my-4">
        <button class="splide__toggle flex justify-center items-center" type="button">
            <span class="splide__toggle__play">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </span>
            <span class="splide__toggle__pause">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </span>
        </button>
    </div>
</section>

